<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="UsuariosPU" transaction-type="JTA">
        <jta-data-source>jdbc/moduloUsuariosDS</jta-data-source>
        <class>mx.tecnm.toluca.usuarios.modelo.Usuario</class>
        <class>mx.tecnm.toluca.usuarios.modelo.RolInterno</class>
        <class>mx.tecnm.toluca.usuarios.modelo.EstadoCuenta</class>
        <class>mx.tecnm.toluca.usuarios.modelo.TipoUsuario</class>
        <class>mx.tecnm.toluca.usuarios.modelo.AuditoriaAcceso</class>
        <class>mx.tecnm.toluca.usuarios.modelo.AuditoriaAccion</class>
        <class>mx.tecnm.toluca.usuarios.modelo.Modulo</class>
        <class>mx.tecnm.toluca.usuarios.modelo.TipoEvento</class>
        <class>mx.tecnm.toluca.usuarios.modelo.RestriccionHorario</class>
        <class>mx.tecnm.toluca.usuarios.modelo.EstadoTicket</class>
        <class>mx.tecnm.toluca.usuarios.modelo.TipoCambio</class>
        <class>mx.tecnm.toluca.usuarios.modelo.TicketRevision</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/usuarios"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
