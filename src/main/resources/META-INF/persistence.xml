<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="pu_usuarios" transaction-type="JTA">
        <jta-data-source>jdbc/moduloUsuariosDS</jta-data-source> <!-- Nombre del DataSource configurado en Payara -->
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/load-data.sql"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>